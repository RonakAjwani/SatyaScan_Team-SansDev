{
  "manifest_version": 3,
  "name": "SatyaScan",
  "version": "1.0",
  "description": "AI-powered misinformation detection assistant.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "SatyaScan-logo.png",
    "48": "SatyaScan-logo.png",
    "128": "SatyaScan-logo.png"
  },
  "action": {
    "default_title": "Open SatyaScan",
    "default_icon": {
      "16": "SatyaScan-logo.png",
      "48": "SatyaScan-logo.png",
      "128": "SatyaScan-logo.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
